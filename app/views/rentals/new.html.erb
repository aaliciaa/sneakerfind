<BR><BR>

<div class="container text-center">
  <div class="row">
    <div class="col-sm-2">
      <h3><%= @shoe.owner.name %></h3>
      <%= image_tag "profile_pic.jpg", class: "avatar-large" %>
    </div>
    <div class="col-sm-2">
      <%= image_tag "arrow.jpg", class: "arrow" %>
    </div>
    <div class="col-sm-4">
      <h3><%= @shoe.name %></h3>
      <%= cl_image_tag @shoe.photo, height: 200, width: 300, crop: :thumb, radius: 20 %>
    </div>
    <div class="col-sm-2">
      <%= image_tag "arrow.jpg", class: "arrow" %>
    </div>
    <div class="col-sm-2">
      <h3>Kayne West</h3>
      <%= image_tag "kanye.png", class: "avatar-large" %>
    </div>
  </div>
</div>
<BR><BR><BR>

<form action="/shoes" class="form-inline">
  <input type="text" class="form-control date-dropper" data-theme="sneakerdate" placeholder="start date">
  <input type="text" class="form-control date-dropper" data-theme="sneakerdate" placeholder="end date">
    </select>
  <input type="Confirm" value="Search" class="btn btn-primary">
</form>
</div>
<BR><BR><BR>
</div>

