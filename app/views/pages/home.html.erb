<div class="homepage">
    <!-- Your banner code -->
    <div class="banner banner-gradient" id="banner-gradient" style="background-image: linear-gradient(to right, rgba(142, 158, 171, 0.3) 0%, rgba(238, 242, 243, 0.1) 0%), url('<%= image_path "background.jpg" %>');">
      <div class="right-subnavbar">
        <% if current_user %>
          <div class="right-subnavbar-right">
            <%= form_tag shoes_path, method: "get", class: "form-inline search-bar" do %>
              <%= text_field_tag :search, nil, placeholder: "Search something", class: "form-control", data: { theme: "sneakerdate", format: "d-m-Y"} %>
            <% end %>
            <div class="dropdown">
              <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
              <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li>
                  <%= link_to root_path do %>
                    <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to profile_path do %>
                    <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        <% else %>
          <div class="right-subnavbar-right">
            <div class="login-btns">
                <%= link_to "Login", new_user_session_path, {class: "btn btn-primary login"} %>
                <%= link_to "Sign Up", new_user_registration_path, {class: "btn btn-primary sign-up"} %>
              </div>
              <%= form_tag shoes_path, method: "get", class: "form-inline search-bar" do %>
                <%= text_field_tag :search, nil, placeholder: "Search something", class: "form-control", data: { theme: "sneakerdate", format: "d-m-Y"} %>

            <% end %>
          </div>
        <% end %>


      </div>

      <div class="banner-content">


