      <%= form_tag shoes_path, method: "get", class: "form-inline" do %>
        <%= text_field_tag :start_date, params[:start_date], class: "form-control date-dropper", data: { theme: "sneakerdate", format: "d-m-Y" } %>
        <%= text_field_tag :end_date, params[:end_date], class: "form-control date-dropper", data: { theme: "sneakerdate", format: "d-m-Y"} %>
        <%= button_tag "Search", class: "btn btn-primary"%>
      <% end %>


